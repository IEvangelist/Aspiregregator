@rendermode InteractiveServer

<FluentHeader>
    <AddNewFeedForm @ref="addNewFeedForm" SourcesUpdated="OnSourcesUpdated" />
</FluentHeader>
<FluentSplitter Class="main" Orientation="Orientation.Horizontal" Width="100%" Panel1Size="25%">
    <Panel1>
        <NavMenu @ref="navMenu" />
    </Panel1>
    <Panel2>
        <FluentBodyContent Class="body-content">
            <div class="content">
                @BodyContent
            </div>
        </FluentBodyContent>
    </Panel2>
</FluentSplitter>

@code
{
    NavMenu? navMenu;
    AddNewFeedForm? addNewFeedForm;

    [Parameter] 
    public RenderFragment? BodyContent { get; set; }

    [Parameter]
    public EventCallback UpdateReceived { get; set; }

    protected async Task OnSourcesUpdated()
    {
        if (navMenu is not null)
        {
            await navMenu.RefreshSources();
            if(UpdateReceived.HasDelegate)
            {
                await UpdateReceived.InvokeAsync();
            }
        }
    }
}
